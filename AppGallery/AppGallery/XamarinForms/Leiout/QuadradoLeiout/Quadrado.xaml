<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Leiout.QuadradoLeiout.Quadrado">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="40">
            <Frame HorizontalOptions="Center" Padding="0" BorderColor="LightGray" CornerRadius="100" IsClippedToBounds="True">
                <Button BackgroundColor="LightPink" Text="+" FontSize="50" HeightRequest="200" WidthRequest="200"/>
            </Frame>
            <Frame Padding="0">
                <StackLayout>
                    <Label Text="Steven Spielberg" TextColor="Black" FontSize="24" HorizontalOptions="Center" Margin="20,20,20,10"/>
                    <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand"/>
                    <Label Text="Diretor de vários filmes famosos" Margin="20"/>
                </StackLayout>
            </Frame>
            <Frame HasShadow="False" CornerRadius="1000" BorderColor="Gray">
                <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>