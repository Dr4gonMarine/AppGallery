<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="15"
             x:Class="AppGallery.XamarinForms.Controle.PassadorControle.Passador">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Increment, Minimum, Maximum, Value"/>
            <Stepper Increment="5" Minimum="0" Maximum="25" Value="5"/>

            <Label Text="Evento: ValueChanged"/>
            <Stepper ValueChanged="Stepper_ValueChanged"/>
            <Label x:Name="LblInformativo" Text="-"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>