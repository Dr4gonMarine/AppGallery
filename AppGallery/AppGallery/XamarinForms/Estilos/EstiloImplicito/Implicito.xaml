<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="15"
             x:Class="AppGallery.XamarinForms.Estilos.EstiloImplicito.Implicito">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="Aquamarine"/>
                <Setter Property="Margin" Value="15"/>
                <Setter Property="TextColor" Value="Gray"/>
            </Style>

            <Style TargetType="InputView" ApplyToDerivedTypes="True">
                <Setter Property="Background" Value="LightGray"/>
                <Setter Property="PlaceholderColor" Value="Green"/>
                <Setter Property="Placeholder" Value="Digite Aqui"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ImplicitStyle"/>

            <Button Text="Botao 01"/>
            <Button Text="Botao 02"/>

            <Entry/>
            <Editor/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>