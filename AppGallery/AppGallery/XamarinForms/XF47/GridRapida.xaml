<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:AppGallery.Recursos.Controls"
             Title="Grid - Declaração Rápida"
             x:Class="AppGallery.XamarinForms.XF47.GridRapida">
    <ContentPage.Content>
        <StackLayout>
            <controls:TitleComponenteView Name="Grid" Properties="ColumnDefinitions, RowDefinitions"/>
            <Grid RowDefinitions="80" ColumnDefinitions="25,50,75,*" ColumnSpacing="0" Margin="10">
                <BoxView Color="Red"/>
                <BoxView Color="Gold" Grid.Column="1"/>
                <BoxView Color="Aquamarine" Grid.Column="2"/>
                <BoxView Color="MidnightBlue" Grid.Column="3"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>