<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="20"
             x:Class="AppGallery.XamarinForms.Animacoes.Simples.Simples">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Animation"/>

            <BoxView x:Name="Box" BackgroundColor="CadetBlue" WidthRequest="150" Opacity="1" TranslationX="0" TranslationY="0" HeightRequest="150" CornerRadius="5" Rotation="0" RotationX="0" RotationY="0" Scale="1" ScaleX="1" ScaleY="1" HorizontalOptions="Center" VerticalOptions="Center"/>

            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Animação Personalizada" Clicked="BtnAnimacaoPersonalizada"/>
                <Button Text="Animação Combinada" Clicked="BtnAnimacaoCombinada"/>
                <Button Text="Translate" Clicked="BtnTranslate"/>
                <Button Text="Rotation" Clicked="BtnRotate"/>
                <Button Text="Scale" Clicked="BtnScale"/>
                <Button Text="Opacity" Clicked="BtnOpacity"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>